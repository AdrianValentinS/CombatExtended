<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- === Wall Armor === -->
  <!-- adjust damageMultipliers dealt by damage defs -->
  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="RB_OverwallArmor"]/damageMultipliers</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="RB_OverwallArmor"]</xpath>
      <value>
        <damageMultipliers />
      </value>
    </nomatch>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName = "RB_OverwallArmor"]/damageMultipliers/li[damageDef = "Bomb"]</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="RB_OverwallArmor"]/damageMultipliers</xpath>
      <value>
        <li>
          <damageDef>Bomb</damageDef>
          <multiplier>0.5</multiplier>
        </li>
      </value>
    </nomatch>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName = "RB_OverwallArmor"]/damageMultipliers/li[damageDef = "Bomb"]/multiplier</xpath>
      <value>
        <multiplier>0.5</multiplier>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName = "RB_OverwallArmor"]/damageMultipliers/li[damageDef = "Thump"]</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="RB_OverwallArmor"]/damageMultipliers</xpath>
      <value>
        <li>
          <damageDef>Thump</damageDef>
          <multiplier>0.5</multiplier>
        </li>
      </value>
    </nomatch>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName = "RB_OverwallArmor"]/damageMultipliers/li[damageDef = "Thump"]/multiplier</xpath>
      <value>
        <multiplier>0.5</multiplier>
      </value>
    </match>
  </Operation>

  <!-- add more damage defs -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName = "RB_OverwallArmor"]/damageMultipliers</xpath>
    <value>
      <li>
        <damageDef>Thermobaric</damageDef>
        <multiplier>0.5</multiplier>
      </li>
      <li>
        <damageDef>Bomb_Secondary</damageDef>
        <multiplier>0.5</multiplier>
      </li>
      <li>
        <damageDef>Demolish</damageDef>
        <multiplier>0.5</multiplier>
      </li>
    </value>
  </Operation>

</Patch>
